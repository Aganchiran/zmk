{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build",
      "type": "shell",
      "command": "cd app && west build",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Build Split",
      "type": "shell",
      "command": "cd app && west build -d build/left -p -b nrfmicro_13 -- -DSHIELD=corne_left -DZMK_CONFIG=\"F:/dev/Corne-ble/zmk-config/config\" && west build -d build/right -p -b nrfmicro_13 -- -DSHIELD=corne_right -DZMK_CONFIG=\"F:/dev/Corne-ble/zmk-config/config\"",
      "group": "build"
    },
    {
      "label": "Flash",
      "type": "shell",
      "command": "cd app && west flash",
      "group": "test"
    },
    {
      "label": "Debug",
      "type": "shell",
      "command": "cd app && west debug",
      "group": "test"
    }
  ]
}
